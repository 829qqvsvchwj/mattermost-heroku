#!/bin/bash

set -e

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

MATTERMOST_VERSION="$(cat $ENV_DIR/MATTERMOST_REPO)"
MATTERMOST_URL="https://releases.mattermost.com/$MATTERMOST_VERSION/mattermost-enterprise-$MATTERMOST_VERSION-linux-amd64.tar.gz"

step "Downloading and unpacking Mattermost"
curl -s -L "${MATTERMOST_URL}" | tar -zxf - --strip-components=1 -C ${BUILD_DIR}
mkdir data/
